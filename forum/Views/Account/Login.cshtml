<link href="~/main/styles.css" rel="stylesheet" />
@model forum.Models.Account

<body style="background-color: #f9f9f9">
    <div class="container">



        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center mt-5">
                    <a href="/">
                        <img src="/Content/images/logo/kteam_Purple _100x46.png" width="200" height="200" />
                    </a>
                    <h4 class="mt-3 font-weight-light">Login </h4>
                </div>
                <div class="card mt-4 mb-5">
                    <div class="card-body">
                        <form asp-controller="account" asp-action="login" id="loginForm" method="post" role="form">
                            <fieldset>
                           


                                <div class="form-group">
                                    <label for="UserName">Username</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-user fa-fw"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="UserName"  required="required" placeholder="Username" type="text" value="" />

                                    </div>
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                                <div class="form-group">
                                    <label for="Password">Password</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-lock fa-fw"></i>
                                            </span>
                                        </div>
                                        <input type="password" asp-for="PassHash" class="form-control" required="required" placeholder="Password">
                                        @*<input class="form-control" data-val="true" data-val-required="The Password field is required." id="Password" name="passhash" placeholder="Password" type="password" />*@

                                    </div>
                                    <span class="text-danger" ></span>
                                </div>
                                <div>
                                    <span style="color:red;font-size:14px;">@ViewBag.Error</span>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block" type="submit">
                                        Login
                                    </button>
                                </div>
                                <p class="text-center">
                                    <a asp-controller="account" asp-action="signup">Sign-Up</a>
                                </p>
                                <p class="text-center m-0">
                                    <a asp-controller="account" asp-action="forgot-password">Forgot password?</a>
                                </p>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>




    </div>

    <script src="/bundles/jquery?v=2u0aRenDpYxArEyILB59ETSCA2cfQkSMlxb6jbMBqf81"></script>

    <script src="/bundles/bootstrap?v=u0F8oWmWnQ4ug4sx_6EQp_zbOpUI2MULx_AmRFNqnlk1"></script>



