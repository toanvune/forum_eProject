@model forum.Models.Account;
<link href="~/Content/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/main/styles.css" rel="stylesheet" />

<body style="background-color: #f9f9f9">
    <div class="container">



        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center mt-5">
                    <a href="/">
                       
                        <img src="/Content/images/logo/kteam_Purple _100x46.png" width="200" height="200" />
                    </a>
                    <h4 class="mt-3 font-weight-light">Confirm Sign up?</h4>
                </div>
                <div class="card mt-4 mb-5">
                    <div class="card-body">
                        <form asp-controller="account" asp-action="confirm" method="post" role="form">
                            <fieldset>
                                <div>
                                    <span style="color:green;font-size:14px;">@ViewBag.Success</span>
                                </div>
                                <div class="form-group">
                                    <label> Enter your Username </label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-envelope fa-fw"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="UserName" placeholder="Username registration" type="text" value="" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Enter your Email.</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-envelope fa-fw"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="Email" placeholder="Email registration" type="text" value="" />
                                    </div>
                                </div>
                                <div>
                                    <span style="color:red;font-size:14px;">@ViewBag.Failed</span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                                </div>
                                <p class="text-center">
                                    <a asp-controller="account" asp-action="login">Login!</a>
                                </p>
                            </fieldset>
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>


    </div>

