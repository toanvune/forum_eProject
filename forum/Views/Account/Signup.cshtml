@model forum.Models.Account

<link href="~/Content/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/main/styles.css" rel="stylesheet" />

<body style="background-color: #f9f9f9">
    <div class="container">



        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center mt-5">
                    <a href="/">
                        <img src="/Content/images/logo/kteam_Purple _100x46.png" width="200" height="200" />
                    </a>
                    <h4 class="mt-3 font-weight-light"> Sign up</h4>
                </div>
                <div class="card mt-4 mb-5">
                    <div class="card-body">
                        <form asp-controller="account" asp-action="signup" id="registerForm" method="post" role="form">
                            <fieldset>


                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-envelope fa-fw"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="Email" placeholder="Email" type="text" value="" />
                                    </div>

                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FullName">Fullname</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-user fa-fw"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="FullName" placeholder="Fullname cannot be more than 30 characters" type="text" value="" />
                                    </div>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserName">Username</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-user fa-fw"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="UserName" placeholder="Username can not more than 20 characters" type="text" value="" />
                                    </div>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PassHash">Password</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-lock fa-fw"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="PassHash" placeholder="Password can not more than 20 characters" type="password" />
                                    </div>
                                    <span asp-validation-for="PassHash" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address">Address</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-address-card"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="Address" placeholder="The Address cannot be larger than 30 characters" type="text" />
                                    </div>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Mobile">Phone number</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-phone"></i>
                                            </span>
                                        </div>
                                        <input pattern="[0]{1}[0-9]{9}" class="form-control" asp-for="Mobile" placeholder="Phone number can not more than 10 characters" type="text" />
                                    </div>
                                    <span asp-validation-for="Mobile" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Birthday">Birthday</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-birthday-cake"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="Birthday" id="Birthday" placeholder="01/01/2000" type="date"  />
                                    </div>
                                    <span asp-validation-for="Birthday" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Gender</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-venus-mars"></i>
                                            </span>
                                        </div>
                                        <select class="form-control ignore" asp-for="Gender">
                                            <option value="Male"> Male</option>
                                            <option value="Female" selected> Female</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Professional">Professional</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-address-card"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="Professional" placeholder="Can not more than 30 characters" type="text" />
                                    </div>
                                    <span asp-validation-for="Professional" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Qualification">Qualification</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-address-card"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="Qualification" placeholder="Can not more than 30 characters" type="text" />
                                    </div>
                                    <span asp-validation-for="Qualification" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Experience">Experience</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-address-card"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="Experience" placeholder="Can not more than 30 characters" type="text" />
                                    </div>
                                    <span asp-validation-for="Experience" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Achievement">Achievement</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-address-card"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" asp-for="Achievement" placeholder="Can not more than 30 characters" type="text" />
                                    </div>
                                    <span asp-validation-for="Achievement" class="text-danger"></span>
                                </div>
                                @*<div class="form-group">
                                        <label for="ConfirmPassword">Nhập lại mật khẩu</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fa fa-lock fa-fw"></i>
                                                </span>
                                            </div>
                                            <input class="form-control" data-val="true" data-val-equalto="The password and confirmation password do not match." data-val-equalto-other="*.Password" id="ConfirmPassword" name="ConfirmPassword" placeholder="Retype Password" type="password" />
                                        </div>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></span>
                                    </div>*@
                                <div>
                                    <span style="color:red;font-size:14px;">@ViewBag.thongbao</span>
                                </div>
                                <div class="form-group">

                                    <button class="g-recaptcha btn btn-primary btn-block">
                                        Sign up
                                    </button>
                                </div>
                                <p class="text-muted">By registering, you agree to our Terms of Use and Privacy Policy.</p>
                                <p class="text-center">
                                    <a asp-controller="account" asp-action="login">Login!</a>
                                </p>
                                <p class="text-center m-0">
                                    <a asp-controller="account" asp-action="forgot-password">Forgot Password?</a>
                                </p>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <script src="/bundles/jquery?v=2u0aRenDpYxArEyILB59ETSCA2cfQkSMlxb6jbMBqf81"></script>

    <script src="/bundles/bootstrap?v=u0F8oWmWnQ4ug4sx_6EQp_zbOpUI2MULx_AmRFNqnlk1"></script>



    <script src="/bundles/jqueryval?v=WhRmI8vUVF186UwYB1zRP7-DwJzqpKlt0JksOBJvolw1"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: 'dd/mm/yy',//check change
                changeMonth: true,
                changeYear: true
            });
            $("#Birthday").datepicker();
        });
    </script>
    <script src="~/js/script.sign-up.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script>
        function onRegister(token) {
            document.getElementById("registerForm").submit();
        }
    </script>
    <script>
        function validateEmail() {
            if ($("form").valid()) {
                $("form").find(".validation-summary-errors").html("");
            }
        }
    </script>

