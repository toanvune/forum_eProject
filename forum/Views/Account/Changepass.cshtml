@model forum.Models.Account
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main-container">

    <!-- Hero -->
    
    <!-- END Hero -->
    <div class="bg-gray-light">
        <div class="content py-0 text-center">
            <ul class="nav nav-tabs nav-tabs-block bg-gray-light justify-content-center">


                <li class="nav-item">
                    <a class="nav-link" asp-controller="account" asp-action="publicprofile">Public profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="account" asp-action="notification">Notification</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="account" asp-action="editprofile">Edit Profile</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="content">
        <div class="row">

            <div class="my-15">
                <div class="col-lg-9">
                    <div class="block block-rounded block-fx-shadow">
                        <div class="block-header block-header-default">
                            <h3 class="block-title font-w600">Change pass</h3>
                        </div>
                        <div class="block-content">
                            <!-- User Profile -->
                            <form asp-controller="account" asp-action="changepass" id="editForm" method="post" role="form">

                                <div class="row items-push">

                                    <div class="col-lg-7 offset-lg-1">
                                        <div class="form-group row">
                                            <div class="col-12">
                                                <label>Old Password</label>
                                                <input class="form-control form-control-lg" name="oldpass"  type="password" value="" required/>
                                                <span class="field-validation-valid text-danger" ></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-12">
                                                <label>New Password</label>
                                                <input class="form-control form-control-lg" name="newpass" type="password" value="" required/>
                                                <span class="field-validation-valid text-danger" ></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-12">
                                                <label>Confirm Password</label>
                                                <input class="form-control form-control-lg" name="confirmpass" type="password"  value="" required />
                                                <span class="field-validation-valid text-danger" ></span>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                                <div>
                                    <span style="color:green;font-size:14px;">@ViewBag.success</span>
                                </div>
                                <div>
                                    <span style="color:red;font-size:14px;">@ViewBag.failed</span>
                                </div>
                                <div class="form-group row mt-20">
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary btn-noborder"><i class="fas fa-save fa-fw"></i> Save</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>

                    <div class="my-15">
                        <ins class="adsbygoogle"
                             style="display:block"
                             data-ad-client="ca-pub-4680711340186781"
                             data-ad-slot="1293612754"
                             data-ad-format="auto"></ins>
                        <script>
                            window.addEventListener('load', function () {
                                (adsbygoogle = window.adsbygoogle || []).push({});
                            });
                            (adsbygoogle = window.adsbygoogle || []).push({});
                        </script>
                    </div>
                </div>
            </div>
        </div>

</main>
